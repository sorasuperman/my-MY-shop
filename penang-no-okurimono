  <script>
    // Auto-year
    document.getElementById('year').textContent = new Date().getFullYear();

    // Attach buy button behavior: add ?quantity=N if provider supports it
    document.querySelectorAll('.card').forEach(card => {
      const buyBtn = card.querySelector('.buy');
      const qtyInput = card.querySelector('.qty input');
      if (!buyBtn || !qtyInput) return;
      buyBtn.addEventListener('click', () => {
        const base = buyBtn.getAttribute('data-url');
        const qty = Math.max(1, parseInt(qtyInput.value || '1', 10));
        // If the provider supports quantity param, append it; otherwise just open base link.
        const url = base.includes('?') ? `${base}&quantity=${qty}` : `${base}?quantity=${qty}`;
        // Open in a new tab to keep user on the page as well
        window.open(url, '_blank', 'noopener');
      });
    });
  </script>
